{% extends 'base.html.twig' %}
{% block Css %}
    <link href="{{ asset('css/style.css') }}" rel="stylesheet"/>
{% endblock %}
{% block title %}{{ parent() }} Register{% endblock %}

{% block body %}

    <h1 class="text-center content-profil my-5">Enregistrement</h1>
    <div class="d-flex justify-content-around row">
        <div class="col-sm-8 col-lg-6 card border-0">

            {{ form_start(registrationForm) }}

            {{ form_label(registrationForm.nom) }}
            {{ form_widget(registrationForm.nom) }}

            {{ form_label(registrationForm.prenom) }}
            {{ form_widget(registrationForm.prenom) }}

            {{ form_label(registrationForm.adresse) }}
            {{ form_widget(registrationForm.adresse) }}

            {{ form_label(registrationForm.codePostal) }}
            {{ form_widget(registrationForm.codePostal) }}

            {{ form_label(registrationForm.ville) }}
            {{ form_widget(registrationForm.ville) }}

            {{ form_label(registrationForm.telephone) }}
            {{ form_widget(registrationForm.telephone) }}

            {{ form_label(registrationForm.email) }}
            {{ form_widget(registrationForm.email) }}

            {{ form_label(registrationForm.depot) }}
            {{ form_widget(registrationForm.depot) }}

            {{ form_label(registrationForm.valide) }}
            {{ form_widget(registrationForm.valide) }}

            {{ form_label(registrationForm.plainPassword.first) }}
            {{ form_widget(registrationForm.plainPassword.first) }}

            {{ form_label(registrationForm.plainPassword.second) }}
            {{ form_widget(registrationForm.plainPassword.second) }}

        </div>

    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    </div>

    {{ form_rest(registrationForm) }}
    {{ form_end(registrationForm) }}


{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Detail du Produit {% endblock %}

{% block Css %}
    <link rel="stylesheet" href="{{ asset('CSS/detail.css') }}">
{% endblock %}

{% block body %}

        <h1 class="text-center my-4">Produit : {{ detail.nom }}</h1>

        <div class="d-flex justify-content-around row">

            <div class="card border-0">

                <div class="form-group row">
                    <p class="detail">Nom : </p>
                    <p class="ml-3">  {{ detail.nom }}</p>
                </div>

                <div class="form-group row">
                    <p class="detail">Producteur : </p>
                    <p class="ml-3">{{ detail.producteur.nom }}</p>
                </div>

                <div class="form-group row">
                    <p class="detail">Prix : </p>
                    <p class="ml-3">{{ detail.prix }} €</p>
                </div>

                <div class="form-group row">
                    <p class="detail">Catégorie : </p>
                    {% if detail.categorie %}
                        <p class="ml-3">{{ detail.categorie.nom }}</p>
                    {% else %}
                        <a class="ml-3"> A définir </a>
                    {% endif %}
                </div>

                <div class="form-group row">
                    <p class="detail">Description : </p>
                    <p class="ml-3"> {{ detail.description }}</p>
                </div>

            </div>

        </div>

        <div class="d-flex justify-content-center row mt-4">
            <a href="{{ path('edit_produit', {'id': detail.id}) }}" class="btn btn-success btn-block" role="button">Modifier
                le Produit</a>
            <a class="btn btn-primary btn-block" role="button" href="{{ path('produit') }}">Retour</a>
        </div>


{% endblock %}
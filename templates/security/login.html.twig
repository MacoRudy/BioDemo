{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <div class="col-12 content-login">

        <form method="post">
            <h1 class="text-center">Connectez-vous !</h1>
            <br>


            <div class=" d-flex justify-content-center form-group form-inline">
                <label for="inputEmail" class="">Email : </label>
                <input type="email" name="email" id="inputEmail" class="form-control mx-sm-3" required autofocus>
            </div>

            <div class=" d-flex justify-content-center form-group form-inline">
                <label for="inputPassword" class="">Mot de passe : </label>
                <input type="password" name="password" id="inputPassword" class="form-control mx-sm-3" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


            <div class="inline-connexion text-center">
                <button class="btn btn-success" type="submit">Se connecter</button>
            </div>


        </form>
    </div>
{% endblock %}

